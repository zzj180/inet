<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <!-- Top -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/list_view_bg"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tv_a2dp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a2dp_status_title"
            android:textSize="24sp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tv_A2DP_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8AFFFFFF"
            android:layout_below="@+id/tv_a2dp_title"/>

        <TextView
            android:id="@+id/tv_avrcp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avrcp_status_title"
            android:textSize="24sp"
            android:layout_below="@+id/tv_A2DP_status"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tv_AVRCP_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8AFFFFFF"
            android:layout_below="@+id/tv_avrcp_title"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Bottom,music control buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_music_stop"
            style="@style/MusicControlButton"
            android:src="@drawable/ic_stop" />

        <ImageButton
            android:id="@+id/btn_music_fastback"
            style="@style/MusicControlButton"
            android:src="@drawable/ic_fast_rewind"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btn_music_prev"
            style="@style/MusicControlButton"
            android:src="@drawable/ic_skip_previous" />

        <ImageButton
            android:id="@+id/btn_music_play_pause"
            style="@style/MusicControlButton"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/btn_music_next"
            style="@style/MusicControlButton"
            android:src="@drawable/ic_skip_next" />

        <ImageButton
            android:id="@+id/btn_music_fastspeed"
            style="@style/MusicControlButton"
            android:src="@drawable/ic_fast_forward"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>


