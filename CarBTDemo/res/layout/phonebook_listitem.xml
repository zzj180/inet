<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phonebook_item"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/btn_call_phonebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_contact_phone" />

    <TextView
        android:id="@+id/item_phonebook_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/item_phonebook_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_phonebook_name"
        android:layout_marginLeft="72dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#8AFFFFFF"
        android:textSize="16sp" />

</RelativeLayout>
