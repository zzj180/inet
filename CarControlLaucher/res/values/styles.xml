<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme" parent="@android:style/Theme.Holo.Wallpaper.NoTitleBar">
    </style>
    
    <style name="mMainIconStyle">
        <item name="android:layout_width">@dimen/mMainIcon</item>
        <item name="android:layout_height">@dimen/mMainIcon</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:duplicateParentState">false</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
    <style name="mMainTvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/mMainFunTvSize</item>
    </style>
    
    <style name="mMainAppIconStyle">
        <item name="android:layout_width">@dimen/mMainAppIconWd</item>
        <item name="android:layout_height">@dimen/mMainAppIconHg</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
</resources>